PORT=3001
MONGODB_URI=mongodb://localhost:27017/websoroban-ide
NODE_ENV=development

# Redis configuration
# Use 'localhost' for local development, 'redis' for Docker Compose
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Worker concurrency settings
COMPILE_WORKER_CONCURRENCY=2
DEPLOY_WORKER_CONCURRENCY=2

# Worker type (for worker containers)
WORKER_TYPE=compile

# Email configuration (for sending invite codes - optional, deprecated)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com
SMTP_FROM_NAME=WebSoroban IDE
FRONTEND_URL=https://websoroban.in

# Authentication
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Payment Configuration
PAYMENT_ADDRESS=GXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
PAYMENT_NETWORK=testnet
HORIZON_URL=https://horizon-testnet.stellar.org